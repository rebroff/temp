<form class="form" action="/">
    <div class="form__body">
      <div class="input-wrap"><input class="input" type="tel" placeholder="{'feedback_tel_pch' | option}" name="feedback-phone"></div>
      <div class="input-wrap"><input class="input" type="email" placeholder="{'feedback_email_pch' | option}" name="feedback-email"></div>
      <div class="input-wrap"><textarea class="input input--textarea" placeholder="{'feedback_msg_pch' | option}" name="feedback-msg"></textarea></div>
    </div>
    <div class="form__footer">
        <button class="primary-btn" type="submit">{'feedback_btn' | option}</button>
    </div>
</form>